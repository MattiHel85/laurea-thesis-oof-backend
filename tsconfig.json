{
    "compilerOptions": {
      "target": "es2016",   
      "module": "commonjs",                                
      "rootDir": "./src",                                  
      "allowJs": true,                                     
      "outDir": "./dist",                                  
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
      "noImplicitAny": true,                            
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  